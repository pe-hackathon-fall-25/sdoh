{
  "name": "server",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p .",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate --config ./src/db/drizzle.config.ts",
    "db:push": "drizzle-kit push --config ./src/db/drizzle.config.ts",
    "db:seed": "tsx src/db/seed.ts",
    "test": "vitest run"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "pdfkit": "^0.13.0",
    "pg": "^8.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "drizzle-orm": "^0.33.0",
    "drizzle-kit": "^0.24.0",
    "tsx": "^4.15.1",
    "typescript": "^5.6.3",
    "vitest": "^2.0.5"
  }
}